<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_category"
    android:background="@drawable/tool_bar"
    android:layout_width="140dp"
    android:layout_height="90dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_category_img"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:src="@drawable/category_1"
            app:layout_constraintTop_toTopOf="@+id/item_category"
            app:layout_constraintBottom_toBottomOf="@+id/item_category"
            app:layout_constraintStart_toStartOf="@+id/item_category"
            app:layout_constraintEnd_toEndOf="@+id/item_category"/>


        <TextView
            android:id="@+id/item_category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코딩"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_category_img"
            app:layout_constraintStart_toStartOf="@+id/item_category_img"
            app:layout_constraintEnd_toEndOf="@+id/item_category_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>